<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:gravity="center_horizontal"
    android:orientation="vertical">

  <TextView
      android:id="@+id/player_playing_now"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:singleLine="true"
      android:textColor="@color/lightGray"
      android:textSize="@dimen/normal_text" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/player_arrow_up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/square_green"
          android:src="@drawable/ic_keyboard_arrow_up_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

      <ImageButton
          android:id="@+id/player_arrow_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/square_green"
          android:src="@drawable/ic_keyboard_arrow_left_24dp" />

      <ImageButton
          android:id="@+id/player_refresh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/square_green"
          android:src="@drawable/ic_refresh_24dp" />

      <ImageButton
          android:id="@+id/player_arrow_right"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/square_green"
          android:src="@drawable/ic_keyboard_arrow_right_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/player_toggle_mute"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="top"
          android:layout_margin="8dp"
          android:background="@drawable/oval_gray"
          android:src="@drawable/ic_volume_off_24dp" />

      <ImageButton
          android:id="@+id/player_arrow_down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="8dp"
          android:background="@drawable/square_green"
          android:src="@drawable/ic_keyboard_arrow_down_24dp" />

      <ImageButton
          android:id="@+id/player_toggle_subtitles"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:layout_margin="8dp"
          android:background="@drawable/oval_gray"
          android:src="@drawable/ic_subtitles_off_24dp" />
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageButton
        android:id="@+id/player_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/square_gray"
        android:src="@drawable/ic_play_24dp" />

    <ImageButton
        android:id="@+id/player_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/square_red"
        android:src="@drawable/ic_stop_24dp" />

    <ImageButton
        android:id="@+id/player_replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/square_green"
        android:src="@drawable/ic_replay_24dp" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:background="@drawable/rounded_borders_gray"
        android:gravity="center"
        android:orientation="vertical">

      <ImageButton
          android:id="@+id/player_volume_up"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_plus_24dp" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_volume_24dp"
          tools:ignore="ContentDescription" />

      <ImageButton
          android:id="@+id/player_volume_down"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_minus_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:background="@drawable/rounded_borders_gray"
        android:gravity="center"
        android:orientation="vertical">

      <ImageButton
          android:id="@+id/player_next_audio_track"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_keyboard_arrow_up_24dp" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_audiotrack_24dp"
          tools:ignore="ContentDescription" />

      <ImageButton
          android:id="@+id/player_previous_audio_track"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_keyboard_arrow_down_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_borders_gray"
        android:gravity="center"
        android:orientation="vertical">

      <ImageButton
          android:id="@+id/player_next_subtitles"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_keyboard_arrow_up_24dp" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_subtitles_24dp"
          tools:ignore="ContentDescription" />

      <ImageButton
          android:id="@+id/player_previous_subtitles"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="6dp"
          android:background="@drawable/square_blue"
          android:src="@drawable/ic_keyboard_arrow_down_24dp" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <SeekBar
        android:id="@+id/player_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="@color/gray"
        android:progressTint="@color/lightGreen" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

      <TextView
          android:id="@+id/player_time_passed"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:textColor="@color/lightGray" />

      <TextView
          android:id="@+id/player_time_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:textColor="@color/lightGray" />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>
